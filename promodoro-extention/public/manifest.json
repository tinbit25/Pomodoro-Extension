{
  "manifest_version": 3,
  "name": "Pomodoro Timer",
  "description": "A simple Pomodoro timer for Chrome.",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.jpg"
  },
  "permissions": [],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icon.jpg",
    "48": "icon.jpg",
    "128": "icon.jpg"
  }
}
